server {
	listen 80;
	server_name joust.bladeismyna.me;
	
	location / {
		proxy_pass http://bladeismyna.me:4000;
	}

	location /socket.io {
		include proxy_params;
		proxy_http_version 1.1;
		proxy_buffering off;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "Upgrade";
		proxy_pass http://bladeismyna.me:4000/socket.io;
	}
}
